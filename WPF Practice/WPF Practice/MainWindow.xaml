<Window x:Class="WPF_Practice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Practice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="Beigecolor" Color="Beige"/>
    </Window.Resources>
    <Grid>
        <Grid.Resources>
            <SolidColorBrush x:Key="Violetcolor" Color="BlueViolet"/>
        </Grid.Resources>
        <Button Content="Button" HorizontalAlignment="Left" Margin="332,168,0,0" VerticalAlignment="Top" Width="80" Height="60" BorderBrush="{StaticResource Beigecolor}" Click="Button_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="573,165,0,0" VerticalAlignment="Top" Width="80" Height="60" BorderBrush="{StaticResource ResourceKey=Bluecolor}" Background="{StaticResource Beigecolor}"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="104,169,0,0" VerticalAlignment="Top" Width="80" Height="60" BorderBrush="{StaticResource ResourceKey=Violetcolor}"/>
    </Grid>
</Window>

<Window x:Class="Style.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Style"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="Beigecolor" Color="Beige"/>
        <SolidColorBrush x:Key="Voiletcolor" Color="BlueViolet"/>
        <Style x:Key="BoldButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource Beigecolor}"/>
            <Setter Property="FontStyle" Value="Italic"/>
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource BoldButton}" x:Key="MouseHoverTrigger">
            <Setter Property="Background" Value="Red"/>
            <Style.Triggers>
                <Trigger Property="IsMouseDirectlyOver" Value="False"/>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button" BasedOn="{StaticResource BoldButton}" x:Key="DarkGreen">
                <Setter Property="BorderBrush" Value="DarkGreen"/>
                <Setter Property="BorderThickness" Value="10.5"/>
            </Style>
        </Grid.Resources>
        <Button Content="Button" HorizontalAlignment="Left" Margin="332,168,0,0" VerticalAlignment="Top" Width="80" Height="60" BorderBrush="{StaticResource Beigecolor}" />
        <Button Content="Styled Button" HorizontalAlignment="Left" Margin="573,165,0,0" VerticalAlignment="Top" Width="80" Height="60" Style="{StaticResource BoldButton }"/>
        <Button Content="Property Trigger Button" HorizontalAlignment="Left" Margin="300,39,0,0" VerticalAlignment="Top" Width="144" Height="60" Style="{StaticResource MouseHoverTrigger }"/>
        <CheckBox x:Name="Checkbox" Content="CheckBox" HorizontalAlignment="Left" Margin="171,345,0,0" VerticalAlignment="Top"/>
        <Button Content="Data Trigger Button" HorizontalAlignment="Left" Margin="300,315,0,0" VerticalAlignment="Top" Width="144" Height="60" Style="{StaticResource BoldButton }">
            <Button.Triggers>
                <DataTrigger Binding="{Binding ElementName=Checkbox,Path=IsChecked}"/>
            </Button.Triggers>
        </Button>
        <Button Content="Button" HorizontalAlignment="Left" Margin="104,169,0,0" VerticalAlignment="Top" Width="80" Height="60" Style="{StaticResource DarkGreen}"/>
    </Grid>
</Window>

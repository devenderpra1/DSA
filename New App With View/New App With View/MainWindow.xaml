<Window x:Class="New_App_With_View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Aqua"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style TargetType="Button" x:Key="Explicit">
            <Setter Property="Background" Value="Red"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <DockPanel>
                <Button FontWeight="Bold" Content="Add Student" VerticalAlignment="Top" HorizontalAlignment="Left" Command="{Binding CreateStudent }">

                </Button>
                <Button FontWeight="Light" Content="Tell I Am An Admin" VerticalAlignment="Top" Command="{Binding UpdateIsAdmin }" HorizontalAlignment="Center" Style="{StaticResource Explicit}">

                </Button>
                <Button FontWeight="Light" Content="Refresh Student" VerticalAlignment="Top" HorizontalAlignment="Right">

                </Button>
            </DockPanel>
        </StackPanel>
        <StackPanel>
            <TextBlock Grid.Row="0" Grid.Column="0" Text="First Name" HorizontalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="1" Width="100" HorizontalAlignment="Center" Text="{Binding Person.FName, Mode=TwoWay}"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Last Name" HorizontalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" Width="100" HorizontalAlignment="Center" Text="{Binding Person.LName, Mode=TwoWay}"/>
            <Button Content="Submit" Command="{Binding CreateStudent }" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="0"/>
            <ListView ItemsSource="{Binding Persons}" Width="Auto" Grid.Row="3" Grid.Column="1">
                <ListView.View >
                    <GridView>
                        <GridViewColumn Header="First Name" DisplayMemberBinding="{Binding FName}" Width="Auto"/>
                        <GridViewColumn  Header="Last Name" DisplayMemberBinding="{Binding LName}" Width="Auto"/>
                        <GridViewColumn  Header="Full Name" DisplayMemberBinding="{Binding FullName}" Width="Auto"/>

                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
